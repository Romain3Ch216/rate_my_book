<div class="dashboard">
  <div class="profile-details">
    <h2><%= current_user.first_name %> <%= current_user.last_name %></h2>
    <p><%= current_user.description %></p>
    <%= link_to 'Editer mon profil', '#', class: 'edit-button' %>

  </div>
  <div class="library">
    <h2>Ma BibliothÃ¨que</h2>
    <div class="library-content">
      <% current_user.follows.each do |follow| %>
        <p>
          <%= follow.chapter.book.title %>
        </p>
      <% end  %>
    </div>
  </div>


  <div class="view">
    <div class="news">
      <div class="tabs">
        <a class="tab active" data-target="#news">
          <p>Chapitres Suivis</p>
        </a>
        <a class="tab" data-target="#reviews">
          <p>Mes Commentaires</p>
        </a>
      </div>
      <% current_user.follows.each do |follow| %>
        <div class="tab-content" id="news">
            <%= follow.chapter.book.chapters.all.last.title %>,
            <%= follow.chapter.book.title %>
            de <%= follow.chapter.book.user.first_name %>
            <%= follow.chapter.book.user.last_name %>
        </div>
      <% end %>
      <div class="tab-content hidden" id="reviews">
        <p>test</p>
        <p>test</p>
        <p>test</p>
        <p>test</p>
        <p>test</p>
      </div>
    </div>
  </div>
</div>
