<div class="book-card-medium">
  <%= link_to book_path(book) do %>
  <div class="rectangle-1" style="border: 1px solid <%= book.hex_for_category %>">
    <div class="rectangle-2" style="border: 1px solid <%= book.hex_for_category %>">
      <div class="card-title">
        <h2><strong><%= book.title %></strong></h2>
        <h3 style="color: <%= book.hex_for_category %>;"><%= book.category %></h3>
      </div>

      <div class="card-summary" >
        <p><%= book.summary.truncate(100, separator: ' ') %></p>
      </div>
      <div class="card-stats">

        <div class="stat">
          <div class="stats views">
            <a>
            <%= image_tag "eye.svg", class: "stat-icon" %>
            </a>
           <p><%= book.chapters.map { |chapter| chapter.reads.count }.inject(0) { |result, element| result + element } %></p>
           </div>

            <div class="stats views">
              <a>
              <%= image_tag "comment.svg", class: "stat-icon" %>
             </a>
              <p><%= book.chapters.map { |chapter| chapter.reviews.count }.inject(0) { |result, element| result + element } %></p>
            </div>
          </div>
      </div>
    </div>
  </div>
</div>
  <%end%>
