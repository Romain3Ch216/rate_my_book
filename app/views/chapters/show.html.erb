<div class="chapter-navbar">
  <div class="title">
    <h1>
      <%= @chapter.title %>
    </h1>
  </div>
  <div class="exit">
    <%= simple_form_for @read do |f| %>
      <%= f.input :is_read?, label: false, input_html: {id: "is-read"}, as: :hidden%>
      <%= button_tag(type: 'submit', class: 'exit-tag') do %>
        <%= image_tag "close.svg" %>
      <% end %>
    <% end %>
  </div>
</div>



<div class="content">

  <div class="overview">
    <a href="">Sommaire  ></a>
    <div class="chapters hidden">
      <% @chapter.book.chapters.all.each do |chapter| %>
        <p>
          <%= link_to chapter_path(chapter) do %>
            <%= chapter.title %>
          <% end %>
        </p>
      <% end %>
    </div>
  </div>

  <div class="bookmark", data-scroll="<%= @scroll.scroll_value %>">
    <%= simple_form_for @scroll do |f| %>
      <%= f.input :scroll_value, input_html: {id: "scroll-value"}, as: :hidden%>
      <%= f.button :submit, value: "Déposer un marque-page", id: "bookmark" %>
    <% end %>

  </div>

  <div class="text-content">
    <p id="text">
      <%= simple_format @chapter.content %>
    </p>

    <div class="review">

      <%= simple_form_for [@chapter, @review] do |f| %>
        <%= f.input :content, label: false, placeholder: "Donnez votre avis à l'auteur..." %>
        <%= f.button :submit, value: "Commenter", class: "send comment", id: "comment" %>
      <% end %>

      <% if current_user.follows.all.map{ |follow| follow.chapter}.include?(@chapter) %>
        <%= link_to "Ne plus suivre le livre", follow_path(current_user.follows.all.find{|follow| follow.chapter == @chapter}), method: :delete, class: "send comment", id: "follow" %>
      <% else %>
        <%= simple_form_for [@chapter, @follow] do |f| %>
          <%= f.button :submit, class: "send comment", id: "follow", value: "Demander le prochain chapitre" %>
        <% end %>
      <% end %>

    </div>
  </div>




</div>

<% content_for :after_js do %>
  <%= render 'bookmark' %>
<% end %>
