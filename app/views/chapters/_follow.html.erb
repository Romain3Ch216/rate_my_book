<% if current_user.follows.all.map{ |follow| follow.chapter}.include?(chapter) %>
  <%= image_tag 'flag.svg' %>
  <%= link_to "Ne plus suivre le livre", follow_path(current_user.follows.all.find{|follow| follow.chapter == chapter}), method: :delete, remote: true, class: "send comment", id: "follow" %>

<% else %>
  <%= image_tag 'flag.svg' %>
  <%= simple_form_for [chapter, follow], remote: true do |f| %>
    <%= f.button :submit, class: "send comment", value: "Demander le prochain chapitre" %>
  <% end %>

<% end %>

